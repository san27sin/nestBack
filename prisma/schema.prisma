generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

// @unique -> аннотация

model User {
  id    String  @id @default(uuid()) // лучше string
  email String  @unique
  name  String?
  password String
  createdAt DateTime @default(now()) @map("created_at")
  updated DateTime @map("updated_at")
  roles Role[]
  token Token[]
  @@map("users")
}

model Token {
  token String @unique
  exp DateTime
  user User @relation(fields: [userId], references: [id])
  userId String
  @@map("tokens")
}

enum Role {
  ADMIN
  USER
}
